<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rubik"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_instrucciones"
        android:layout_width="333dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="81dp"
        android:text="Ingresa un nÃºmero del 1 al 4:"
        android:textColor="#070707"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_numero"
        android:layout_width="175dp"
        android:layout_height="67dp"
        android:layout_below="@id/txt_instrucciones"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:inputType="number"
        android:minWidth="32dp"
        android:minHeight="48dp"
        android:textColor="#FDFFFF"
        tools:ignore="SpeakableTextPresentCheck" />


    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="212dp"
        android:layout_height="65dp"
        android:layout_below="@id/edt_numero"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="15dp"
        android:text="Enviar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="236dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="19dp"
        android:text="4. Maps"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="236dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="27dp"
        android:text="3. Fibonacci"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="33dp"
        android:text="2. Potencia" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="29dp"
        android:text="1. Multiplicacion" />

</RelativeLayout>